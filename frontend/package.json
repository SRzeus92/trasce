{
  "name": "front",
  "version": "1.0.0",
  "description": "PONG Game",
  "scripts": {
    "build-ts": "tsc --outDir dist --rootDir src",
    "build-css": "tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build": "npm run build-ts && npm run build-css",
    "dev": "concurrently \"tsc --watch --outDir dist --rootDir src\" \"tailwindcss -i ./src/input.css -o ./dist/output.css --watch\""
  },
  "keywords": [
    "pong",
    "game"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.9.3"
  }
}
